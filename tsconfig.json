{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/component/*"],
      "@lib/*": ["src/lib/*"],
      "@store/*": ["src/store/*"],
      "@assets/*": ["src/assets/*"],
      "@ui/*" : ["src/ui/*"],
      "@page/*" : ["src/page/*"],
      "@util/*": ["src/util/*"],
    }
  },
  
  "include": [
    "src"
  ],
  "extends": "./tsconfig.extend.json",
}
